---

<!doctype html>
<html lang="fr" data-theme="SAE301">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>
      TaVue ‚Äì Cr√©e tes lunettes personnalis√©es | Style & Fabrication fran√ßaise
    </title>
    <meta
      name="description"
      content="Configurez vos lunettes sur mesure, visualisez-les en temps r√©el et commandez-les. √âl√©gance minimaliste, fabrication fran√ßaise."
    />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "TaVue",
        "url": "https://sae301.eva-lacroix.fr",
        "description": "Site pour configurer des lunettes personnalis√©es en ligne.",
        "applicationCategory": "DesignApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "0.00",
          "priceCurrency": "EUR",
          "description": "Configuration gratuite."
        }
      }
    </script>
  </head>
  <div
    class="min-h-screen flex items-center justify-center px-4 flex-col h-full glass bg-secondary"
  >
    <a href="/" class="fixed top-4 left-4 z-50">
      <Image
        src="/public/icon/logo.png"
        alt="TaVue logo"
        width={24}
        height={10}
        class="w-24 h-10 lg:w-36 lg:h-16 object-contain"
        loading="lazy"
      />
    </a>
    <div class="card w-xs lg:w-sm max-w-md shadow-2xl bg-base-100">
      <div class="card-body w-full">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl mb-6 justify-center text-center text-primary font-bold"
        >
          Connexion
        </h1>
        <!-- Formulaire de connexion -->
        <form id="login-form" class="flex flex-col gap-5 w-full">
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />
          <button type="submit" class="btn btn-primary w-full btn-base">
            Connexion
          </button>
        </form>
        <p id="status" class="mt-4 text-center text-error text-base lg:text-xl">
        </p>
        <p class="mt-2 text-center text-sm lg:text-base">
          Pas de compte ?
          <a href="/signup" class="link link-primary">Cr√©er un compte</a>
        </p>

        <p id="status" class="mt-4 text-center text-error font-semibold"></p>
      </div>
    </div>
  </div>

  <script>
    //@ts-nocheck
    // On retire toute ancienne information utilisateur du stockage local
    localStorage.removeItem("user");
    const form = document.getElementById("login-form");
    const status = document.getElementById("status");

    // Gestion de la soumission du formulaire
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      // Envoi des informations au serveur via l'API /api/login
      const res = await fetch("/api2/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          email: formData.get("email"),
          password: formData.get("password"),
        }),
        credentials: "include", // Permet d'inclure les cookies dans la requ√™te
      });

      // Ancien Traitement de la r√©ponse
      //   if (res.ok) {
      //     const resData = await res.json();
      //     localStorage.setItem("user", JSON.stringify(resData.user)); // Sauvegarde des infos utilisateur
      //     status.textContent = "‚úÖ Connexion r√©ussie !";
      //     // Redirection vers la page d'accueil apr√®s un court d√©lai
      //     window.location.href = "/";
      //   } else {
      //     status.textContent = "‚ùå Email ou mot de passe invalide";
      //   }
      // });

      // Nouveau Traitement de la r√©ponse avec redirection intelligente
      if (res.ok) {
        const resData = await res.json();
        localStorage.setItem("user", JSON.stringify(resData.user));
        status.textContent = "‚úÖ Connexion r√©ussie !";

        // üî• On r√©cup√®re le param√®tre "redirect" dans l'URL (s'il existe)
        const params = new URLSearchParams(window.location.search);
        const redirect = params.get("redirect");

        // Si on vient de l'accueil, redirige vers /accueil
        if (!redirect || redirect === "/") {
          window.location.href = "/accueil";
        } else {
          // Sinon, retourne vers la page d'origine (ex: /generator)
          window.location.href = redirect;
        }
      }
    });
  </script>


</html>
