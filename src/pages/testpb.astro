---
//@ts-nocheck
import Layout from "../layouts/Layout.astro";
import pb from "../../pocketbase/pb";
import { Collections } from "../../pocketbase/pocketbase-types";

// Récupère uniquement les SVGs de l'utilisateur connecté
const svgList = await pb.collection(Collections.Lunette).getFullList({});
---

<Layout>
  <div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-semibold mb-6">Mes SVGs</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        svgList.map((s) => (
          <div class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-xl shadow-sm hover:shadow-lg transform hover:-translate-y-1 transition-all duration-200 overflow-hidden">
            <div class="flex items-start justify-between gap-3 p-4">
              <div>
                <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">
                  Lunette
                </div>
                <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
                  {s.name ?? s.id}
                </div>
              </div>

              <div class="flex items-center gap-2">
                <button
                  class="inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-700 transition"
                  title="Télécharger"
                  onClick={() => {
                    const blob = new Blob([s.code_svg], {
                      type: "image/svg+xml",
                    });
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement("a");
                    a.href = url;
                    a.download = `${s.name ?? s.id}.svg`;
                    a.click();
                    URL.revokeObjectURL(url);
                  }}
                >
                  <svg
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 4v12m0 0l-4-4m4 4 4-4M21 21H3"
                    />
                  </svg>
                </button>

                <button
                  class="inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:bg-gray-100 dark:hover:bg-gray-700 hover:text-gray-700 transition"
                  title="Copier SVG"
                  onClick={() => navigator.clipboard?.writeText(s.code_svg)}
                >
                  <svg
                    class="w-4 h-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6M12 9v6M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                </button>
              </div>
            </div>

            <div class="svg-container p-6 bg-gray-50 dark:bg-gray-900 flex justify-center items-center border-t border-b border-gray-100 dark:border-gray-800">
              <div class="w-full max-w-xs" set:html={s.code_svg} />
            </div>

            <div class="p-4">
              <pre
                class="bg-gray-100 dark:bg-gray-900 text-xs text-gray-800 dark:text-gray-200 p-3 rounded-md overflow-x-auto font-mono select-text"
                style="max-height:10rem;"
              >
                {s.code_svg}
              </pre>

              <div class="mt-3 flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">
                <div>Taille: {String((s.code_svg || "").length)} chars</div>
                <div>
                  {s.created ? new Date(s.created).toLocaleDateString() : ""}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
