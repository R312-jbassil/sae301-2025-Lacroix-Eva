    />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebApplication",
        "name": "TaVue",
        "url": "https://sae301.eva-lacroix.fr",
        "description": "Site pour configurer des lunettes personnalis√©es en ligne.",
        "applicationCategory": "DesignApplication",
        "operatingSystem": "Web",
        "offers": {
          "@type": "Offer",
          "price": "0.00",
          "priceCurrency": "EUR",
