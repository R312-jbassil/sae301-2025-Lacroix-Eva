    </script>
  </head>
  <div
    class="min-h-screen flex items-center justify-center px-4 flex-col h-full glass bg-primary"
  >
    <a href="/" class="fixed top-4 left-4 z-50">
      <Image
        src="/src/assets/icon/logo.png"
        alt="TaVue logo"
        width={24}
        height={10}
        class="w-24 h-10 lg:w-36 lg:h-16 object-contain"
        loading="lazy"
      />
    </a>
    <div class="card w-xs lg:w-sm max-w-md shadow-2xl bg-base-100">
      <div class="card-body">
        <h1
          class="text-2xl md:text-3xl lg:text-4xl mb-2 lg:mb-6 justify-center text-center text-primary font-bold"
        >
          S'inscrire
        </h1>
        <p class="text-xs lg:text-sm text-center text-success mb-1 lg:mb-2">
          Inscription 100% gratuite et sans engagement
        </p>
        <form id="signup-form" class="flex flex-col gap-5">
          <input
            type="text"
            name="username"
            placeholder="Nom d'utilisateur"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />
          <input
            type="email"
            name="email"
            placeholder="Email"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />
          <input
            type="password"
            name="password"
            placeholder="Mot de passe"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />
          <input
            type="password"
            name="passwordConfirm"
            placeholder="Confirmer le mot de passe"
            required
            class="input input-bordered input-primary w-full text-xs lg:text-sm"
          />

          <button type="submit" class="btn btn-primary w-full btn-base lg:btn-lg"
            >S'inscrire</button
          >
        </form>

        <div
          class="flex items-center justify-center gap-2 text-xs lg:text-sm text-base-300 mt-3"
        >
          <span>üîí</span>
          <span>Connexion s√©curis√©e ‚Äì Donn√©es prot√©g√©es</span>
        </div>

        <p id="status" class="mt-4 text-center text-error"></p>
        <p class="mt-2 text-center text-sm lg:text-base">
          D√©j√† un compte ?
          <a href="/login" class="link link-primary">Se connecter</a>
        </p>
      </div>
    </div>
  </div>

  <script>
    //@ts-nocheck
    const form = document.getElementById("signup-form");
    const status = document.getElementById("status");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      const password = formData.get("password");

      const res = await fetch("/api2/signup", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          username: formData.get("username"),
          email: formData.get("email"),
          password: password,
          passwordConfirm: password,
        }),
      });

      if (res.ok) {
        status.textContent = "‚úÖ Compte cr√©√© ! Redirection...";
        setTimeout(() => (window.location.href = "/login"), 1500);
      } else {
        status.textContent = "‚ùå Erreur lors de l‚Äôinscription";
      }
    });
  </script>


</html>
