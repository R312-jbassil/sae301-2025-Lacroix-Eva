              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Contour monture</span>
                </label>
                <div class="flex gap-3">
                  <input
                    type="color"
                    id="stroke-color"
                    value="#1d1d1b"
                    class="w-16 h-16 rounded-lg cursor-pointer border-2 border-base-300"
                  />
                  <input
                    type="text"
                    id="stroke-color-text"
                    value="#1d1d1b"
                    class="input input-bordered flex-1"
                  />
                </div>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Verres (teinte)</span>
                </label>
                <div class="flex gap-3">
                  <input
                    type="color"
                    id="lens-color"
                    value="#000000"
                    class="w-16 h-16 rounded-lg cursor-pointer border-2 border-base-300"
                  />
                  <input
                    type="text"
                    id="lens-color-text"
                    value="#000000"
                    class="input input-bordered flex-1"
                  />
                </div>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold"
                    >Opacit√© des verres</span
                  >
                  <span class="label-text-alt" id="lens-opacity-value">75%</span
                  >
                </label>
                <input
                  type="range"
                  id="lens-opacity"
                  min="0"
                  max="100"
                  value="75"
                  class="range range-primary"
                />
