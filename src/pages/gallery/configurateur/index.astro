              <!-- Actions -->
              <div class="card-actions justify-end mt-6 gap-2">
                <button id="reset-btn" class="btn btn-outline btn-sm">
                  R√©initialiser
                </button>
                <button id="download-btn" class="btn btn-primary btn-sm">
                  T√©l√©charger SVG
                </button>
                <button id="save-btn" class="btn btn-accent btn-sm">
                  Enregistrer
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Panneau de configuration -->
        <div class="order-1 lg:order-2 space-y-6">
          <!-- Couleurs de la monture -->
          <div class="card bg-base-100 shadow-lg">
            <div class="card-body">
              <h3 class="card-title text-secondary mb-4">üé® Couleurs</h3>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Monture</span>
                </label>
                <div class="flex gap-3">
                  <input
                    type="color"
                    id="frame-color"
                    value="#ffffff"
                    class="w-16 h-16 rounded-lg cursor-pointer border-2 border-base-300"
                  />
                  <input
                    type="text"
                    id="frame-color-text"
                    value="#ffffff"
                    class="input input-bordered flex-1"
                  />
