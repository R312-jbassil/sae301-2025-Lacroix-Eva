              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Taille des verres</span
                  >
                  <span class="label-text-alt" id="lens-size-value">100%</span>
                </label>
                <input
                  type="range"
                  id="lens-size"
                  min="85"
                  max="115"
                  value="100"
                  class="range range-primary"
                />
                <div class="w-full flex justify-between text-xs px-2 mt-1">
                  <span>Petit</span>
                  <span>Moyen</span>
                  <span>Grand</span>
                </div>
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold"
                    >√âpaisseur du contour</span
                  >
                  <span class="label-text-alt" id="stroke-width-value"
                    >0.5px</span
                  >
                </label>
                <input
                  type="range"
                  id="stroke-width"
                  min="0.1"
                  max="2"
                  step="0.1"
                  value="0.5"
                  class="range range-primary"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Configuration par d√©faut
  const defaultConfig = {
    frameColor: "#ffffff",
    strokeColor: "#1d1d1b",
    lensColor: "#000000",
    lensOpacity: 0.75,
    bridgeWidth: 1,
    lensSize: 1,
    strokeWidth: 0.5,
  };

  let currentConfig = { ...defaultConfig };

  // √âl√©ments du DOM
  const svg = document.getElementById("lunettes-svg");
  const mainGroup = document.getElementById("main-group");
  const svgStyles = document.getElementById("svg-styles");

  const frameColorInput = document.getElementById("frame-color");
  const frameColorText = document.getElementById("frame-color-text");
  const strokeColorInput = document.getElementById("stroke-color");
  const strokeColorText = document.getElementById("stroke-color-text");
  const lensColorInput = document.getElementById("lens-color");
  const lensColorText = document.getElementById("lens-color-text");
  const lensOpacityInput = document.getElementById("lens-opacity");
  const lensOpacityValue = document.getElementById("lens-opacity-value");

  const bridgeWidthInput = document.getElementById("bridge-width");
  const bridgeWidthValue = document.getElementById("bridge-width-value");
  const lensSizeInput = document.getElementById("lens-size");
  const lensSizeValue = document.getElementById("lens-size-value");
  const strokeWidthInput = document.getElementById("stroke-width");
  const strokeWidthValue = document.getElementById("stroke-width-value");

  const resetBtn = document.getElementById("reset-btn");
  const downloadBtn = document.getElementById("download-btn");
  const saveBtn = document.getElementById("save-btn");
  const materialPresets = document.querySelectorAll(".material-preset");

  // Fonction de mise √† jour du SVG
  function updateSVG() {
    // Mise √† jour des styles CSS dans le SVG
    svgStyles.textContent = `
      .cls-1 {
        fill: #706f6f;
        mix-blend-mode: multiply;
      }
      .cls-2 {
        isolation: isolate;
      }
      .cls-3, .cls-4 {
        fill: ${currentConfig.frameColor};
      }
      .cls-4 {
        stroke: ${currentConfig.strokeColor};
        stroke-miterlimit: 10;
        stroke-width: ${currentConfig.strokeWidth}px;
      }
      .cls-5 {
        fill: ${currentConfig.lensColor};
        opacity: ${currentConfig.lensOpacity};
      }
    `;

    // Transformation de la monture (largeur pont et taille verres)
    const scaleX = currentConfig.bridgeWidth;
    const scaleY = currentConfig.lensSize;
    mainGroup.setAttribute(
      "transform",
      `translate(${297.64 * (1 - scaleX)}, ${420.945 * (1 - scaleY)}) scale(${scaleX}, ${scaleY})`
    );
  }

  // Synchronisation couleur picker et input texte
  function syncColorInputs(colorInput, textInput) {
    colorInput.addEventListener("input", (e) => {
      textInput.value = e.target.value;
      currentConfig[colorInput.id.replace("-", "").replace("color", "Color")] =
        e.target.value;
      updateSVG();
    });

    textInput.addEventListener("input", (e) => {
      const value = e.target.value;
      if (/^#[0-9A-F]{6}$/i.test(value)) {
        colorInput.value = value;
        currentConfig[
          colorInput.id.replace("-", "").replace("color", "Color")
        ] = value;
        updateSVG();
      }
    });
  }

  syncColorInputs(frameColorInput, frameColorText);
  syncColorInputs(strokeColorInput, strokeColorText);
  syncColorInputs(lensColorInput, lensColorText);

  // Opacit√© des verres
  lensOpacityInput.addEventListener("input", (e) => {
    const value = parseInt(e.target.value) / 100;
    currentConfig.lensOpacity = value;
    lensOpacityValue.textContent = `${e.target.value}%`;
    updateSVG();
  });

  // Largeur du pont
  bridgeWidthInput.addEventListener("input", (e) => {
    const value = parseInt(e.target.value) / 100;
    currentConfig.bridgeWidth = value;
    bridgeWidthValue.textContent = `${e.target.value}%`;
    updateSVG();
  });

  // Taille des verres
  lensSizeInput.addEventListener("input", (e) => {
    const value = parseInt(e.target.value) / 100;
    currentConfig.lensSize = value;
    lensSizeValue.textContent = `${e.target.value}%`;
    updateSVG();
  });

  // √âpaisseur contour
  strokeWidthInput.addEventListener("input", (e) => {
    const value = parseFloat(e.target.value);
    currentConfig.strokeWidth = value;
    strokeWidthValue.textContent = `${value}px`;
    updateSVG();
  });

  // Presets mat√©riaux
  materialPresets.forEach((btn) => {
    btn.addEventListener("click", () => {
      const frameColor = btn.dataset.frame;
      const strokeColor = btn.dataset.stroke;

      frameColorInput.value = frameColor;
      frameColorText.value = frameColor;
      strokeColorInput.value = strokeColor;
      strokeColorText.value = strokeColor;

      currentConfig.frameColor = frameColor;
      currentConfig.strokeColor = strokeColor;

      updateSVG();
    });
  });

  // R√©initialiser
  resetBtn.addEventListener("click", () => {
    currentConfig = { ...defaultConfig };

    frameColorInput.value = defaultConfig.frameColor;
    frameColorText.value = defaultConfig.frameColor;
    strokeColorInput.value = defaultConfig.strokeColor;
    strokeColorText.value = defaultConfig.strokeColor;
    lensColorInput.value = defaultConfig.lensColor;
    lensColorText.value = defaultConfig.lensColor;
    lensOpacityInput.value = defaultConfig.lensOpacity * 100;
    lensOpacityValue.textContent = `${defaultConfig.lensOpacity * 100}%`;
    bridgeWidthInput.value = defaultConfig.bridgeWidth * 100;
    bridgeWidthValue.textContent = `${defaultConfig.bridgeWidth * 100}%`;
    lensSizeInput.value = defaultConfig.lensSize * 100;
    lensSizeValue.textContent = `${defaultConfig.lensSize * 100}%`;
    strokeWidthInput.value = defaultConfig.strokeWidth;
    strokeWidthValue.textContent = `${defaultConfig.strokeWidth}px`;

    updateSVG();
  });

  // T√©l√©charger
  downloadBtn.addEventListener("click", () => {
    const svgData = new XMLSerializer().serializeToString(svg);
    const blob = new Blob([svgData], { type: "image/svg+xml" });
    const url = URL.createObjectURL(blob);
    const link = document.createElement("a");
    link.href = url;
    link.download = `lunettes_personnalisees_${Date.now()}.svg`;
    link.click();
    URL.revokeObjectURL(url);
  });

  // Enregistrer (API)
  saveBtn.addEventListener("click", async () => {
    const name = prompt("Donnez un nom √† votre cr√©ation :");
    if (!name) return;

    const svgCode = new XMLSerializer().serializeToString(svg);
    const user = JSON.parse(localStorage.getItem("user") || "{}");

    try {
      const res = await fetch("/api2/saveSVG", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          name,
          code_svg: svgCode,
          chat_history: JSON.stringify([
            {
              role: "system",
              content: `Configuration: ${JSON.stringify(currentConfig)}`,
            },
          ]),
          user: user.id,
        }),
      });

      const data = await res.json();
      if (data.success) {
        alert("‚úÖ Lunettes sauvegard√©es avec succ√®s !");
        window.location.href = "/gallery";
      } else {
        alert("‚ùå Erreur lors de la sauvegarde");
      }
    } catch (error) {
      console.error("Erreur:", error);
      alert("‚ùå Erreur de connexion");
    }
  });

  // Initialisation
  updateSVG();
</script>
